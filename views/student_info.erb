  <!-- Student information form, provide students info while adding new student or editing information about particular student -->

<label for="fname">
First Name: <input type="text" name="student[fname]" required><br>

<label for="lname">
Last Name: <input type="text" name="student[lname]" required><br>

<label for="gender">
Gender : 

Male <input type="radio" name="student[gender]" id="f-radio" value="Male" >
Female <input type="radio" name="student[gender]" id="f-radio2" value="Female" ><br>


<label for="bdy">
Birthday : <input type="date" name="student[bdy]" required><br>

<label for="add">
Address: <input type="text" name="student[add]" required><br>

<label for="sid">
StudentID: <input type="text" name="student[sid]" required><br>

<label for="email">
Email : <input type="email" name="student[email]" required><br>
<br>

<label for="submit">
<input type="submit" value="Save">
